---
import "../styles/global.css";
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AboutHero from '../components/AboutHero.astro';
import ServicesDetail from '../components/ServicesDetail.astro';
import serviciosHero from '../assets/images/servicios-hero.jpg'; // Asume que tienes esta imagen
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Servicios | TSI Grupo</title>
    <meta name="description" content="Servicios integrales de imagen corporativa: gestión de proyectos, ingeniería, producción, instalación, mantenimiento y consultoría. Más de 30 años de experiencia." />
  </head>
  <body class="bg-white text-gray-900 min-h-screen flex flex-col">
    <Header currentPath="/servicios" />

    <main class="flex-1">
      <AboutHero 
        image={serviciosHero}
        height="50vh"
        title="Nuestros Servicios"
        subtitle="Soluciones integrales de imagen corporativa desde la concepción hasta el mantenimiento. Un ecosistema completo para proyectos de comunicación visual."
      />

      <ServicesDetail />
    </main>

    <Footer />
  </body>
</html>
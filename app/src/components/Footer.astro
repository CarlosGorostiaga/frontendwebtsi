---
import logoImg from '../assets/images/logo-no-fondo.png';

// Información de las oficinas
const offices = [
  {
    location: "Madrid, España",
    type: "Sede Central y Fábrica",
    address: "Carretera Ajalvir a Daganzo km 1,200",
    postalCode: "28864 Ajalvir, Madrid",
    phone: "+34 91 887 41 70",
    email: "info@tsigrupo.com",
    mapQuery: "Carretera+Ajalvir+a+Daganzo+km+1,200+28864+Ajalvir+Madrid+España",
    coordinates: "40.5362,-3.3650"
  },
  {
    location: "Buenos Aires, Argentina", 
    type: "Oficinas y Fábrica",
    address: "Avenida Arturo Illia 1817",
    postalCode: "B1661ABF Bellavista, Buenos Aires",
    phone: "+54 11 4666 8466",
    email: "info@tsigrupo.com.ar",
    mapQuery: "Avenida+Arturo+Illia+1817+B1661ABF+Bellavista+Buenos+Aires+Argentina",
    coordinates: "-34.5543,-58.5087"
  },
  {
    location: "Ciudad de México, México",
    type: "Oficina",
    address: "Adolfo Prieto, N.º 1213",
    postalCode: "03100 Col. del Valle, Ciudad de México",
    phone: "+34 91 887 41 70",
    email: "info@tsigrupo.com",
    mapQuery: "Adolfo+Prieto+1213+03100+Col+del+Valle+Ciudad+de+México+México",
    coordinates: "19.3734,-99.1640"
  }
];

// Links de navegación rápida
const quickLinks = [
  { name: "Inicio", href: "/" },
  { name: "Nosotros", href: "/nosotros" },
  { name: "Servicios", href: "/servicios" },
  { name: "Proyectos", href: "/proyectos" },
  { name: "Contacto", href: "/contacto" }
];

// Servicios principales
const mainServices = [
  "Gestión de Proyectos",
  "Grandes Estructuras",
  "Letras Corpóreas",
  "Impresión Digital",
  "Iluminación",
  "Termoconformado"
];

// Función para generar URL de Google Maps para abrir en nueva pestaña
function getGoogleMapsUrl(query: string) {
  return `https://www.google.com/maps/search/?api=1&query=${query}`;
}
---

<footer class="bg-gray-900 text-white">
  <!-- Main Footer Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      
      <!-- Company Info -->
      <div class="lg:col-span-1">
        <div class="flex items-center mb-6">
          <div class="h-10 w-10 bg-white rounded-lg flex items-center justify-center p-1">
            <img 
              src={logoImg.src} 
              alt="TSI Grupo Logo" 
              class="h-8 w-8 object-contain"
            />
          </div>
          <div class="ml-3">
            <span class="text-xl font-bold">TSI Grupo</span>
            <span class="block text-sm text-gray-400">Imagen Corporativa</span>
          </div>
        </div>
        
        <p class="text-gray-300 text-sm mb-6 leading-relaxed">
          Más de 30 años de experiencia en comunicación visual y proyectos de imagen corporativa para grandes empresas a nivel nacional e internacional.
        </p>

        <!-- Social Links -->
        <div class="flex space-x-4">
          <a href="#" class="text-gray-400 hover:text-white transition-colors duration-200">
            <span class="sr-only">LinkedIn</span>
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.761 0 5-2.239 5-5v-14c0-2.761-2.239-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
          <a href="#" class="text-gray-400 hover:text-white transition-colors duration-200">
            <span class="sr-only">Email</span>
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 5.457v13.909c0 .904-.732 1.636-1.636 1.636h-3.819V11.73L12 16.64l-6.545-4.91v9.273H1.636C.732 21.002 0 20.27 0 19.366V5.457c0-.904.732-1.636 1.636-1.636h.727L12 10.186l9.637-6.365h.727C23.268 3.821 24 4.553 24 5.457z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="lg:col-span-1">
        <h3 class="text-lg font-semibold mb-6">Navegación</h3>
        <ul class="space-y-3">
          {quickLinks.map((link) => (
            <li>
              <a 
                href={link.href} 
                class="text-gray-300 hover:text-white transition-colors duration-200 text-sm"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div class="lg:col-span-1">
        <h3 class="text-lg font-semibold mb-6">Servicios</h3>
        <ul class="space-y-3">
          {mainServices.map((service) => (
            <li class="text-gray-300 text-sm">{service}</li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div class="lg:col-span-1">
        <h3 class="text-lg font-semibold mb-6">Contacto Principal</h3>
        <div class="text-gray-300 text-sm space-y-3">
          <div class="flex items-start">
            <svg class="h-4 w-4 mt-0.5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <div>
              <div class="font-medium text-white">Madrid - Sede Central</div>
              <div>{offices[0].address}</div>
              <div>{offices[0].postalCode}</div>
            </div>
          </div>
          
          <div class="flex items-center">
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <a href={`tel:${offices[0].phone}`} class="hover:text-white transition-colors">
              {offices[0].phone}
            </a>
          </div>
          
          <div class="flex items-center">
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <a href={`mailto:${offices[0].email}`} class="hover:text-white transition-colors">
              {offices[0].email}
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Offices Section with Maps -->
    <div class="border-t border-gray-800 mt-12 pt-8">
      <h3 class="text-lg font-semibold mb-6 text-center">Nuestras Oficinas</h3>
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {offices.map((office) => (
          <div class="bg-gray-800 rounded-lg overflow-hidden">
            <!-- Map Iframe -->
            <div class="relative group h-48">
              <iframe
                src={`https://www.google.com/maps?q=${encodeURIComponent(office.coordinates)}&z=15&output=embed`}
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                class="w-full h-full border-0"
              ></iframe>
              <!-- Overlay with link to open in Google Maps -->
              <a 
                href={getGoogleMapsUrl(office.mapQuery)}
                target="_blank"
                rel="noopener noreferrer"
                class="absolute inset-0 bg-black/0 group-hover:bg-black/30 flex items-center justify-center transition-all duration-200"
              >
                <div class="bg-orange-500 text-white px-3 py-1 rounded-lg text-sm font-medium opacity-0 group-hover:opacity-100 translate-y-2 group-hover:translate-y-0 transition-all duration-200">
                  Ver en Google Maps
                </div>
              </a>
            </div>
            
            <!-- Office Info -->
            <div class="p-6 text-center">
              <h4 class="font-semibold text-white mb-2">{office.location}</h4>
              <p class="text-orange-400 text-sm mb-3">{office.type}</p>
              <div class="text-gray-300 text-sm space-y-1">
                <p>{office.address}</p>
                <p>{office.postalCode}</p>
                <div class="pt-3 space-y-2">
                  <div class="flex items-center justify-center">
                    <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                    <a href={`tel:${office.phone}`} class="hover:text-white transition-colors">
                      {office.phone}
                    </a>
                  </div>
                  <div class="flex items-center justify-center">
                    <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                    <a href={`mailto:${office.email}`} class="hover:text-white transition-colors">
                      {office.email}
                    </a>
                  </div>
                </div>
                
                <!-- Direction Button -->
                <div class="pt-3">
                  <a 
                    href={getGoogleMapsUrl(office.mapQuery)}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center px-3 py-2 bg-orange-500 hover:bg-orange-600 text-white text-sm rounded-lg transition-colors duration-200"
                  >
                    <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
                    </svg>
                    Cómo llegar
                  </a>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Bottom Footer -->
  <div class="border-t border-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="md:flex md:items-center md:justify-between">
        <div class="flex justify-center md:order-2">
          <p class="text-gray-400 text-sm">
            © {new Date().getFullYear()} TSI Grupo. Todos los derechos reservados.
          </p>
        </div>
        <div class="mt-4 flex justify-center md:mt-0 md:order-1">
          <div class="flex space-x-6">
            <a href="/privacy" class="text-gray-400 hover:text-white text-sm transition-colors">
              Política de Privacidad
            </a>
            <a href="/legal" class="text-gray-400 hover:text-white text-sm transition-colors">
              Aviso Legal
            </a>
            <a href="/cookies" class="text-gray-400 hover:text-white text-sm transition-colors">
              Cookies
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

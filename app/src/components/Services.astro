---
/**
 * Services.astro
 * Grid de 6 servicios con fotos grandes 16:9
 */

import imgGestion from '../assets/images/gestionproyectostsi.jpg';
import imgIDi from '../assets/images/IDi-servicios.jpg';
import imgInstalacion from '../assets/images/instalacionymontaje.jpeg';
import imgMantenimiento from '../assets/images/Mantenimiento.jpg';
import imgProduccion from '../assets/images/produccion-servicios.jpg';
import imgConsultoria from '../assets/images/consultoria-servicios.jpg';

type Svc = {
  title: string;
  desc: string;
  img: { src: string };
  href?: string | null;
  cta?: string;
};

const services: Svc[] = [
  {
    title: "Gestión de proyectos",
    desc:
      "Equipo técnico especializado en planificar y orientar proyectos de inicio a fin, adaptando la gestión a los requisitos del cliente: toma de datos, planos, cálculos de ingeniería, etc.",
    img: imgGestion,
    href: "/servicios#gestion-de-proyectos",
    cta: "Saber más"
  },
  {
    title: "Desarrollo, ingeniería e I+D+i",
    desc:
      "Ingeniería de producto y constructiva con un departamento de I+D+i. Incorporamos nuevas tecnologías, materiales sostenibles y optimización de procesos productivos.",
    img: imgIDi,
    href: "/servicios#idi",
    cta: "Proyectos de I+D+i"
  },
  {
    title: "Producción",
    desc:
      "Planta de producción en Madrid con maquinaria avanzada para cubrir todas las fases con alto rendimiento y acabados impecables. Diferentes secciones especializadas.",
    img: imgProduccion,
    href: "/servicios#produccion",
    cta: "Técnicas de fabricación"
  },
  {
    title: "Instalación y montaje",
    desc:
      "Amplios equipos de montaje para responder a actuaciones urgentes y grandes campañas. Instalamos cualquier elemento de imagen cumpliendo con seguridad y salud.",
    img: imgInstalacion,
    href: "/servicios#instalacion",
    cta: "Cómo trabajamos"
  },
  {
    title: "Mantenimiento",
    desc:
      "Red de equipos de mantenimiento con respuesta rápida en toda la Península. Programas preventivos, correctivos y siniestros. Obras civiles asociadas a la instalación.",
    img: imgMantenimiento,
    href: "/servicios#mantenimiento",
    cta: "Solicitar mantenimiento"
  },
  {
    title: "Consultoría e imagen corporativa",
    desc:
      "Asesoramos a las empresas en la creación, rediseño y gestión de su identidad visual, garantizando coherencia en todos los soportes y puntos de contacto con sus clientes.",
    img: imgConsultoria,
    href: "/servicios#consultoria",
    cta: "Descubrir más"
  }
];
---

<section class="py-20 bg-neutral-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-14">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-3">Nuestros Servicios</h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        Soluciones integrales de imagen corporativa: ingeniería, producción, instalación, mantenimiento y consultoría.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8">
      {services.map((s) => (
        <article
          class="group bg-white rounded-2xl overflow-hidden shadow-lg ring-1 ring-gray-100 hover:shadow-2xl transition-all duration-300 opacity-0 translate-y-4"
          data-reveal
        >
          <div class="relative w-full aspect-[16/9] overflow-hidden">
            <img
              src={s.img.src}
              alt={s.title}
              class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
              loading="lazy"
              decoding="async"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent"></div>
            <h3 class="absolute bottom-3 left-4 right-4 text-white text-xl font-semibold drop-shadow-md">
              {s.title}
            </h3>
          </div>

          <div class="p-6">
            <p class="text-gray-600 leading-relaxed">{s.desc}</p>

            {s.href && (
              <div class="mt-6">
                <a
                  href={s.href}
                  class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-semibold text-white transition-colors"
                  style="background-color:#f66500;"
                >
                  {s.cta || "Saber más"}
                  <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  [data-reveal] { opacity: 0; transform: translateY(8px); }
  [data-reveal].visible {
    opacity: 1; transform: translateY(0);
    transition: opacity .5s ease, transform .5s ease;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const items = document.querySelectorAll('[data-reveal]');
    const io = new IntersectionObserver((entries, obs) => {
      entries.forEach(e => {
        if (e.isIntersecting) {
          e.target.classList.add('visible');
          obs.unobserve(e.target);
        }
      });
    }, { threshold: 0.2 });
    items.forEach(el => io.observe(el));
  });
</script>

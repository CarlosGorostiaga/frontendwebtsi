---
const steps = [
  { title: "Consulta inicial", desc: "Entendemos tus necesidades y objetivos.", icon: "heroicons:chat-bubble-left-right", time: "1-2 días" },
  { title: "Análisis", desc: "Estudio técnico y viabilidad del proyecto.", icon: "heroicons:magnifying-glass", time: "2-3 días" },
  { title: "Diseño", desc: "Propuesta visual y planos técnicos.", icon: "heroicons:pencil-square", time: "3-7 días" },
  { title: "Producción", desc: "Fabricación con controles de calidad.", icon: "heroicons:cog-6-tooth", time: "1-3 semanas" },
  { title: "Instalación", desc: "Montaje profesional y seguro.", icon: "heroicons:arrow-down-tray", time: "1-5 días" },
  { title: "Mantenimiento", desc: "Servicio continuo y soporte 24/7.", icon: "heroicons:shield-check", time: "Continuo" },
];
---

<section class="py-8 lg:py-12 bg-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Cabecera -->
    <div class="text-center mb-16">
      <span class="inline-block font-semibold text-[0.75rem] uppercase tracking-[.06em] px-3.5 py-1 rounded-full text-[#ff6f1a] bg-[rgba(255,111,26,.12)]">Proceso de trabajo</span>
      <h2 class="text-3xl sm:text-4xl font-extrabold tracking-tight text-gray-900">
        De la idea al mantenimiento <span class="bg-gradient-to-br from-[#ff6f1a] to-[#ffb380] bg-clip-text text-transparent">paso a paso</span>
      </h2>
      <p class="mt-2 text-gray-600">Tiempos estimados y transparencia total en cada fase</p>
    </div>

    <!-- Timeline -->
    <div class="relative grid gap-7 lg:grid-cols-6">
      <!-- Línea guía -->
      <div class="absolute left-6 top-0 bottom-0 w-0.5 bg-[rgba(255,111,26,.2)]
                  lg:left-0 lg:right-0 lg:top-8 lg:bottom-auto lg:h-0.5 lg:w-full lg:z-0"></div>

      {steps.map((s) => (
        <div class="grid grid-cols-[auto_1fr] items-start gap-4 
                    lg:grid-cols-1 lg:text-center lg:justify-items-center">
          <!-- Icono + puntito -->
          <div class="relative flex items-center">
            <div class="grid place-items-center w-11 h-11 rounded-full bg-[#ff6f1a] text-white 
                        shadow-[0_6px_18px_rgba(255,111,26,.25)] ring-1 ring-white/15 z-10">
              <iconify-icon icon={s.icon} width="20" height="20"></iconify-icon>
            </div>

            <!-- Puntito alineado con la línea -->
            <span class="hidden lg:block absolute left-1/2 -translate-x-1/2 
                         top-8 -translate-y-1/2
                         w-2.5 h-2.5 rounded-full bg-white 
                         shadow-[0_0_0_4px_rgba(255,111,26,.12),_0_0_0_1px_rgba(255,111,26,.2)]
                         z-[1]"></span>
          </div>

          <!-- Card -->
          <div class="bg-white/80 backdrop-blur-sm border border-black/5 rounded-2xl p-4 
                      shadow-[0_6px_20px_rgba(0,0,0,.05)] transition-transform duration-300 
                      hover:-translate-y-0.5 hover:shadow-[0_10px_28px_rgba(0,0,0,.08)] 
                      max-w-[18rem] lg:mt-2">
            <h3 class="text-[1.05rem] font-semibold text-gray-900">{s.title}</h3>
            <p class="mt-1 text-[0.95rem] leading-relaxed text-gray-600">{s.desc}</p>
            <span class="inline-block mt-3 text-[0.82rem] font-semibold text-[#ff6f1a] 
                         bg-[rgba(255,111,26,.12)] px-2.5 py-1 rounded-full">{s.time}</span>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

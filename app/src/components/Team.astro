---
// Importa las imágenes que tengas disponibles o usa placeholders
// import proyectosImg from '../assets/images/team-proyectos.jpg';
// import fabricacionImg from '../assets/images/team-fabricacion.jpg';
// import montajeImg from '../assets/images/team-montaje.jpg';

// Definir tipos
type IconType = 'blueprint' | 'manufacturing' | 'installation';

interface TeamBlock {
  title: string;
  desc: string;
  icon: IconType;
  image?: { src: string } | string; // Opcional para cuando tengas imágenes
  imageAlt: string;
  stats: { number: string; label: string; };
}

const blocks: TeamBlock[] = [
  {
    title: "Gestión de proyectos y desarrollo de ingenierías",
    desc: "Integrado por un equipo de ingenieros, licenciados, delineantes y personal administrativo. Especializados en la planificación y orientación de proyectos desde su inicio hasta la finalización, incluyendo toma de datos, optimización de recursos, desarrollo de planos y cálculos de ingeniería.",
    icon: "blueprint",
    // image: proyectosImg, // Descomenta cuando tengas las imágenes
    imageAlt: "Equipo de ingenieros trabajando en proyectos",
    stats: { number: "15+", label: "Ingenieros" }
  },
  {
    title: "Fabricación y producción",
    desc: "Personal especializado en cerrajería, grandes estructuras, electrificación, pintura, plástico y vinilo. Instalaciones equipadas para cubrir todas las fases de la producción con alto rendimiento y acabados impecables.",
    icon: "manufacturing",
    // image: fabricacionImg, // Descomenta cuando tengas las imágenes
    imageAlt: "Equipo de fabricación y producción",
    stats: { number: "25+", label: "Especialistas" }
  },
  {
    title: "Equipos de montaje y mantenimiento",
    desc: "Equipos especializados en imagen corporativa, dotados de furgonetas con cestas elevadoras para reducir tiempos y aumentar la seguridad en instalación y mantenimiento en toda la Península Ibérica.",
    icon: "installation",
    // image: montajeImg, // Descomenta cuando tengas las imágenes
    imageAlt: "Equipo de montaje con furgonetas especializadas",
    stats: { number: "20+", label: "Técnicos" }
  }
];

// SVG Icons con tipos seguros
const icons: Record<IconType, string> = {
  blueprint: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
  </svg>`,
  manufacturing: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
  </svg>`,
  installation: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
  </svg>`
};
---

<section class="py-20 relative overflow-hidden" style="background: linear-gradient(135deg, #ffffff 0%, #eeeeef 100%);">
  <!-- Elementos decorativos de fondo -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute top-10 right-20 w-64 h-64 rounded-full blur-3xl" style="background-color: #f66500;"></div>
    <div class="absolute bottom-20 left-10 w-80 h-80 rounded-full blur-3xl" style="background-color: #f66500; opacity: 0.6;"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Header mejorado -->
    <header class="text-center mb-16">
      <div class="inline-flex items-center justify-center w-16 h-16 rounded-full mb-6" style="background-color: #f66500;">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
      </div>
      
      <div class="space-y-4">
        <span class="inline-block px-4 py-2 text-sm font-semibold rounded-full uppercase tracking-wider" style="background-color: #eeeeef; color: #f66500;">
          Nuestro Equipo
        </span>
        <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 leading-tight">
          Profesionales 
          <span class="team-gradient">especializados</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-4xl mx-auto font-light leading-relaxed">
          Un equipo multidisciplinar que cubre todas las fases del proyecto de imagen corporativa, 
          desde la concepción hasta el mantenimiento.
        </p>
      </div>
    </header>

    <!-- Tarjetas del equipo -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {blocks.map((block, index) => (
        <article class="group relative h-full">
          <div class="bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-gray-100 h-full flex flex-col">
            
            <!-- Imagen o placeholder -->
            <div class="relative h-48 overflow-hidden">
              {block.image ? (
                <img 
                  src={typeof block.image === 'string' ? block.image : block.image.src} 
                  alt={block.imageAlt}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                />
              ) : (
                <div class="w-full h-full flex items-center justify-center team-placeholder" style="background: linear-gradient(135deg, #f66500, #ff8533);">
                  <div class="text-center">
                    <div class="w-16 h-16 mx-auto mb-4 bg-white/20 rounded-full flex items-center justify-center">
                      <Fragment set:html={icons[block.icon]} />
                    </div>
                    <div class="text-white/90 font-semibold text-sm">
                      {block.imageAlt}
                    </div>
                  </div>
                </div>
              )}
              
              <!-- Overlay con estadística -->
              <div class="absolute top-4 right-4">
                <div class="bg-white/95 backdrop-blur-sm rounded-full px-3 py-2 text-center border border-gray-200">
                  <div class="text-lg font-bold" style="color: #f66500;">{block.stats.number}</div>
                  <div class="text-xs text-gray-600 font-medium">{block.stats.label}</div>
                </div>
              </div>
              
              <!-- Indicador de categoría -->
              <div class="absolute bottom-0 left-0 right-0">
                <div class="h-2" style="background: linear-gradient(90deg, #f66500, #ff8533);"></div>
              </div>
            </div>

            <!-- Contenido -->
            <div class="p-6 flex-1 flex flex-col">
              <!-- Icono y título -->
              <div class="flex items-start space-x-4 mb-4">
                <div class="flex-shrink-0 w-12 h-12 rounded-xl flex items-center justify-center text-white" style="background-color: #f66500;">
                  <Fragment set:html={icons[block.icon]} />
                </div>
                <h3 class="text-xl font-bold text-gray-900 leading-tight group-hover:text-gray-700 transition-colors">
                  {block.title}
                </h3>
              </div>
              
              <!-- Descripción -->
              <div class="flex-1">
                <p class="text-gray-600 leading-relaxed text-sm">
                  {block.desc}
                </p>
              </div>
              
              <!-- Botón de acción -->
              <div class="mt-6">
                {/* <button class="w-full px-4 py-3 rounded-xl font-medium transition-all duration-300 team-cta" style="background-color: #eeeeef; color: #f66500;">
                  <span class="flex items-center justify-center space-x-2">
                    <span>Conocer más</span>
                    <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </span>
                </button> */}
              </div>
            </div>
          </div>
        </article>
      ))}
    </div>

    <!-- Estadísticas generales -->
    <div class="mt-16 text-center">
      <div class="inline-flex items-center space-x-8 bg-white/60 backdrop-blur-sm rounded-2xl px-8 py-6 border border-gray-200">
        <div class="text-center">
          <div class="text-3xl font-bold" style="color: #f66500;">60+</div>
          <div class="text-sm text-gray-600 font-medium">Profesionales</div>
        </div>
        <div class="w-px h-12 bg-gray-300"></div>
        <div class="text-center">
          <div class="text-3xl font-bold" style="color: #f66500;">3</div>
          <div class="text-sm text-gray-600 font-medium">Departamentos</div>
        </div>
        <div class="w-px h-12 bg-gray-300"></div>
        <div class="text-center">
          <div class="text-3xl font-bold" style="color: #f66500;">100%</div>
          <div class="text-sm text-gray-600 font-medium">Dedicación</div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Gradiente para la palabra "especializados" */
  .team-gradient {
    background: linear-gradient(135deg, #f66500 0%, #ff8533 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: transparent;
  }
  
  /* Fallback para navegadores que no soporten gradientes en texto */
  @supports not (background-clip: text) {
    .team-gradient {
      color: #f66500;
    }
  }

  /* Hover effect para botones CTA */
  .team-cta:hover {
    background-color: #f66500 !important;
    color: white !important;
    transform: translateY(-1px);
    box-shadow: 0 10px 25px rgba(246, 101, 0, 0.3);
  }

  /* Placeholder personalizado */
  .team-placeholder {
    position: relative;
  }

  .team-placeholder::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: repeating-linear-gradient(
      45deg,
      transparent,
      transparent 10px,
      rgba(255, 255, 255, 0.1) 10px,
      rgba(255, 255, 255, 0.1) 20px
    );
  }

  /* Efectos responsive */
  @media (max-width: 1024px) {
    .grid.grid-cols-1.lg\\:grid-cols-3 {
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    }
  }

  /* Animaciones mejoradas */
  .group:hover .team-cta svg {
    transform: translateX(4px);
  }

  /* Accesibilidad */
  @media (prefers-reduced-motion: reduce) {
    * {
      animation-duration: 0.01ms !important;
      transition-duration: 0.01ms !important;
    }
  }
</style>
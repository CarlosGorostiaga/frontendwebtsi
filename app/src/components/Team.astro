---
import proyectosImg from '../assets/images/team-proyectos.jpg';
import fabricacionImg from '../assets/images/team-fabricacion.jpg';
import montajeImg from '../assets/images/team-montaje.jpg';

type IconType = 'blueprint' | 'manufacturing' | 'installation';

interface TeamBlock {
  title: string;
  desc: string;
  icon: IconType;
  image?: { src: string } | string;
  imageAlt: string;
  stats: { number: string; label: string };
}

const blocks: TeamBlock[] = [
  {
    title: "Gestión de proyectos y desarrollo de ingenierías",
    desc: "Integrado por un equipo de ingenieros, licenciados, delineantes y personal administrativo. Especializados en la planificación y orientación de proyectos desde su inicio hasta la finalización, incluyendo toma de datos, optimización de recursos, desarrollo de planos y cálculos de ingeniería.",
    icon: "blueprint",
    image: proyectosImg,
    imageAlt: "Equipo de ingenieros trabajando en proyectos",
    stats: { number: "15+", label: "Ingenieros" }
  },
  {
    title: "Fabricación y producción",
    desc: "Personal especializado en cerrajería, grandes estructuras, electrificación, pintura, plástico y vinilo. Instalaciones equipadas para cubrir todas las fases de la producción con alto rendimiento y acabados impecables.",
    icon: "manufacturing",
    image: fabricacionImg,
    imageAlt: "Equipo de fabricación y producción",
    stats: { number: "25+", label: "Especialistas" }
  },
  {
    title: "Equipos de montaje y mantenimiento",
    desc: "Equipos especializados en imagen corporativa, dotados de furgonetas con cestas elevadoras para reducir tiempos y aumentar la seguridad en instalación y mantenimiento en toda la Península Ibérica.",
    icon: "installation",
    image: montajeImg,
    imageAlt: "Equipo de montaje con furgonetas especializadas",
    stats: { number: "20+", label: "Técnicos" }
  }
];

const icons: Record<IconType, string> = {
  blueprint: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>`,
  manufacturing: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/></svg>`,
  installation: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>`
};
---

<section class="py-20 relative overflow-hidden bg-gradient-to-br from-white to-gray-100">
  <!-- Fondos -->
  <div class="absolute inset-0 opacity-5 pointer-events-none">
    <div class="absolute top-10 right-20 w-64 h-64 rounded-full blur-3xl bg-orange-500"></div>
    <div class="absolute bottom-20 left-10 w-80 h-80 rounded-full blur-3xl bg-orange-500/60"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Header -->
    <header class="text-center mb-16">
      <div class="inline-flex items-center justify-center w-16 h-16 rounded-full mb-6 bg-orange-500">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
      </div>
      <div class="space-y-4">
        <span class="inline-block px-4 py-2 text-sm font-semibold rounded-full uppercase tracking-wider bg-gray-100 text-orange-500">
          Nuestro Equipo
        </span>
        <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 leading-tight">
          Profesionales <span class="bg-gradient-to-br from-orange-500 to-orange-300 bg-clip-text text-transparent">especializados</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-4xl mx-auto font-light leading-relaxed">
          Un equipo multidisciplinar que cubre todas las fases del proyecto de imagen corporativa, desde la concepción hasta el mantenimiento.
        </p>
      </div>
    </header>

    <!-- Tarjetas -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {blocks.map((block) => (
        <article class="group relative h-full">
          <div class="bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-gray-100 h-full flex flex-col">
            <div class="relative h-48 overflow-hidden">
              {block.image ? (
                <img 
                  src={typeof block.image === 'string' ? block.image : block.image.src} 
                  alt={block.imageAlt}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                />
              ) : (
                <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-orange-500 to-orange-300">
                  <div class="text-center">
                    <div class="w-16 h-16 mx-auto mb-4 bg-white/20 rounded-full flex items-center justify-center">
                      <Fragment set:html={icons[block.icon]} />
                    </div>
                    <div class="text-white/90 font-semibold text-sm">
                      {block.imageAlt}
                    </div>
                  </div>
                </div>
              )}
              <div class="absolute top-4 right-4">
                <div class="bg-white/95 backdrop-blur-sm rounded-full px-3 py-2 text-center border border-gray-200">
                  <div class="text-lg font-bold text-orange-500">{block.stats.number}</div>
                  <div class="text-xs text-gray-600 font-medium">{block.stats.label}</div>
                </div>
              </div>
              <div class="absolute bottom-0 left-0 right-0">
                <div class="h-2 bg-gradient-to-r from-orange-500 to-orange-300"></div>
              </div>
            </div>

            <div class="p-6 flex-1 flex flex-col">
              <div class="flex items-start gap-4 mb-4">
                <div class="flex-shrink-0 w-12 h-12 rounded-xl flex items-center justify-center text-white bg-orange-500">
                  <Fragment set:html={icons[block.icon]} />
                </div>
                <h3 class="text-xl font-bold text-gray-900 leading-tight group-hover:text-gray-700 transition-colors">
                  {block.title}
                </h3>
              </div>
              <div class="flex-1">
                <p class="text-gray-600 leading-relaxed text-sm">
                  {block.desc}
                </p>
              </div>
            </div>
          </div>
        </article>
      ))}
    </div>

    <!-- Estadísticas generales (100% ANCHO, SIN DESBORDES) -->
    <div class="mt-16">
      <div class="mx-auto w-full max-w-4xl px-4 sm:px-0">
        <div class="rounded-2xl border border-gray-200 shadow-sm bg-white/70 supports-[backdrop-filter]:bg-white/60 backdrop-blur overflow-hidden overflow-x-hidden">
          <!-- Flex: columna en móvil, fila en sm+ -->
          <div class="flex flex-col sm:flex-row w-full max-w-full">
            <!-- Item 1 -->
            <div class="min-w-0 flex-1 px-4 py-5 sm:px-6 text-center border-b sm:border-b-0 sm:border-r border-gray-200">
              <div class="text-2xl sm:text-3xl font-extrabold text-orange-500 tracking-tight">60+</div>
              <div class="mt-1 text-xs sm:text-sm text-gray-600 leading-snug break-words whitespace-normal">Profesionales</div>
            </div>
            <!-- Item 2 -->
            <div class="min-w-0 flex-1 px-4 py-5 sm:px-6 text-center border-b sm:border-b-0 sm:border-r border-gray-200">
              <div class="text-2xl sm:text-3xl font-extrabold text-orange-500 tracking-tight">3</div>
              <div class="mt-1 text-xs sm:text-sm text-gray-600 leading-snug break-words whitespace-normal">Departamentos</div>
            </div>
            <!-- Item 3 -->
            <div class="min-w-0 flex-1 px-4 py-5 sm:px-6 text-center">
              <div class="text-2xl sm:text-3xl font-extrabold text-orange-500 tracking-tight">100%</div>
              <div class="mt-1 text-xs sm:text-sm text-gray-600 leading-snug break-words whitespace-normal">Dedicación</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

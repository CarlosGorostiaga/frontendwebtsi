---
const certs = [
  { 
    code: 'ISO 9001:2015', 
    label: 'Gestión de la Calidad',
    description: 'Sistemas de gestión de la calidad para mejorar continuamente y satisfacer a los clientes.',
    icon: 'quality',
    year: '2015'
  },
  { 
    code: 'ISO 14001:2015', 
    label: 'Gestión Ambiental',
    description: 'Sistemas de gestión ambiental para minimizar el impacto en el medio ambiente.',
    icon: 'environment',
    year: '2015'
  },
  { 
    code: 'ISO 45001:2018', 
    label: 'Seguridad y Salud en el Trabajo',
    description: 'Sistemas de gestión para proporcionar lugares de trabajo seguros y saludables.',
    icon: 'safety',
    year: '2018'
  }
];

// Iconos SVG para cada certificación
const icons = {
  quality: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
  </svg>`,
  environment: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
  </svg>`,
  safety: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
  </svg>`
};
---

<section class="py-20 relative overflow-hidden" style="background: linear-gradient(135deg, #f66500 0%, #ff8533 100%);">
  <!-- Elementos decorativos -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-10 left-10 w-64 h-64 rounded-full blur-3xl bg-white"></div>
    <div class="absolute bottom-10 right-10 w-80 h-80 rounded-full blur-3xl bg-white/70"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 rounded-full blur-3xl bg-white/30"></div>
  </div>

  <!-- Patrón de fondo -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0" style="background-image: repeating-linear-gradient(45deg, transparent, transparent 20px, rgba(255,255,255,0.1) 20px, rgba(255,255,255,0.1) 40px);"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Header -->
    <header class="text-center mb-16">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-white/20 backdrop-blur-sm rounded-full mb-6">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
        </svg>
      </div>
      
      <div class="space-y-4">
        <span class="inline-block px-4 py-2 bg-white/20 backdrop-blur-sm text-white text-sm font-semibold rounded-full uppercase tracking-wider">
          Certificaciones
        </span>
        <h2 class="text-4xl lg:text-5xl font-bold text-white leading-tight">
          Estándares de 
          <span class="text-white/90">excelencia</span>
        </h2>
        <p class="text-xl text-white/90 max-w-3xl mx-auto font-light leading-relaxed">
          Certificaciones internacionales que avalan nuestro compromiso con la calidad, 
          el medio ambiente y la seguridad laboral.
        </p>
      </div>
    </header>

    <!-- Certificaciones -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
      {certs.map((cert, index) => (
        <div class="group relative">
          <div class="bg-white/95 backdrop-blur-sm rounded-3xl p-8 shadow-2xl hover:shadow-3xl transition-all duration-500 transform hover:-translate-y-2 border border-white/20 h-full flex flex-col">
            <!-- Header de la tarjeta -->
            <div class="flex items-center justify-between mb-6">
              <div class="w-16 h-16 rounded-2xl flex items-center justify-center text-white group-hover:scale-110 transition-transform duration-300" style="background: linear-gradient(135deg, #f66500, #ff8533);">
                <Fragment set:html={icons[cert.icon as keyof typeof icons]} />
              </div>
              <div class="text-right">
                <div class="text-sm font-medium text-gray-500 uppercase tracking-wider">Certificado</div>
                <div class="text-lg font-bold" style="color: #f66500;">{cert.year}</div>
              </div>
            </div>
            
            <!-- Contenido -->
            <div class="flex-1 flex flex-col">
              <h3 class="text-2xl font-bold text-gray-900 mb-2 group-hover:scale-105 transition-transform duration-300 origin-left">
                {cert.code}
              </h3>
              <p class="text-lg font-semibold text-gray-700 mb-4">
                {cert.label}
              </p>
              <p class="text-gray-600 leading-relaxed text-sm flex-1">
                {cert.description}
              </p>
              
              <!-- Indicador de estado -->
              <div class="mt-6 flex items-center justify-between">
                <div class="flex items-center space-x-2">
                  <div class="w-3 h-3 rounded-full animate-pulse" style="background-color: #f66500;"></div>
                  <span class="text-sm font-medium text-gray-600">Certificación activa</span>
                </div>
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Sección de impacto -->
    <div class="bg-white/10 backdrop-blur-md rounded-3xl p-8 border border-white/20">
      <div class="text-center mb-8">
        <h3 class="text-2xl font-bold text-white mb-4">
          Nuestro compromiso con la excelencia
        </h3>
        <p class="text-white/80 leading-relaxed max-w-3xl mx-auto">
          Estas certificaciones nos permiten garantizar procesos de alta calidad, 
          responsabilidad ambiental y espacios de trabajo seguros para todo nuestro equipo.
        </p>
      </div>

      <!-- Estadísticas -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="text-center">
          <div class="text-3xl font-bold text-white mb-2">100%</div>
          <div class="text-sm text-white/70 font-medium">Procesos certificados</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-white mb-2">0</div>
          <div class="text-sm text-white/70 font-medium">Accidentes laborales</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-white mb-2">-30%</div>
          <div class="text-sm text-white/70 font-medium">Impacto ambiental</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-white mb-2">3</div>
          <div class="text-sm text-white/70 font-medium">Normas ISO</div>
        </div>
      </div>
    </div>

    <!-- Call to action -->
    <div class="mt-12 text-center">
      <button class="inline-flex items-center space-x-3 px-8 py-4 bg-white/20 backdrop-blur-sm text-white font-semibold rounded-2xl hover:bg-white/30 transition-all duration-300 transform hover:scale-105 hover:shadow-lg">
        <span>Ver certificados completos</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
        </svg>
      </button>
    </div>
  </div>
</section>

<style>
  /* Sombras mejoradas */
  .shadow-3xl {
    box-shadow: 0 35px 60px -12px rgba(0, 0, 0, 0.25);
  }
  
  /* Animaciones personalizadas */
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
  
  /* Efectos de hover mejorados */
  .group:hover .group-hover\\:scale-110 {
    transform: scale(1.1);
  }
  
  .group:hover .group-hover\\:scale-105 {
    transform: scale(1.05);
  }
  
  /* Efectos de pulso personalizado */
  @keyframes pulse-orange {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }
  
  .animate-pulse {
    animation: pulse-orange 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  /* Responsive mejorado */
  @media (max-width: 768px) {
    .grid.grid-cols-2.md\\:grid-cols-4 {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
    
    .text-4xl.lg\\:text-5xl {
      font-size: 2.5rem;
    }
  }
  
  /* Accesibilidad */
  @media (prefers-reduced-motion: reduce) {
    * {
      animation-duration: 0.01ms !important;
      transition-duration: 0.01ms !important;
    }
    
    .animate-pulse,
    .animate-float {
      animation: none;
    }
  }
</style>